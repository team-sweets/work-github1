<table class='table table-hover table-inverse'>
 <thead>
     <tr>
      <h2>ジャンル一覧・追加</h2>
      <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>
        <th><h4>ジャンル名</h4></th> 
        <th><%= f.text_field :name %></th> 
        <th><%= f.submit '新規登録' ,class: 'btn btn-success'%></th> 
      <% end %>
     </tr>
 </thead>
 
 <tbody>
  <tr><td><h4>ジャンル</h4></td></tr>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", admin_genres_edit_path(genre.id) %></td>
    </tr>
<% end %>

  </tbody>
</table>