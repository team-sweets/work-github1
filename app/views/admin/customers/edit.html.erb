
<div class="container">
<div class="row justify-content-center">
  <div calss="col-xs-12">
    <%#= render "layouts/error_messages", resource: @customer %>
    <div class="row subtitle">
      <h4 style="display: inline;"><strong><%= @customer.full_name %>さんの会員情報編集</strong></h4>
    </div>

  <%= form_with model: @customer, url: admin_customer_update_path(@customer.id), local: true do |f| %>

    <div class="col-xs-10 subtitle">
      <div class="form-group col-xs-9">
        <%= f.label :"会員ID", class: "col-sm-4 control-label" %>
        <%= f.label :"#{@customer.id}" %>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :"氏名", class: "col-sm-4 control-label" %>
        <%= f.text_field :first_name, class: "col-sm-3 form-control-static name" %>
        <%= f.text_field :last_name, class: "col-sm-3 form-control-static name" %>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :"フリガナ", class: "col-sm-4 control-label" %>
        <%= f.text_field :kana_first_name, class: "col-sm-3 form-control-static" %>
        <%= f.text_field :kana_last_name, class: "col-sm-3 form-control-static" %>
      </div>

        <div class="form-group col-xs-9">
        <%= f.label :"郵便番号", class: "col-sm-4 control-label" %>
        <%= f.text_field :postal_code, class: "col-sm-3 form-control-static" %>
        </div>

        <div class="form-group col-xs-9">
        <%= f.label :"住所", class: "col-sm-4 control-label" %>
        <%= f.text_field :address, class: "col-sm-6 form-control-static" %>
        </div>

        <div class="form-group col-xs-9">
        <%= f.label :"電話番号", class: "col-sm-4 control-label" %>
        <%= f.text_field :phone_number, class: "col-sm-3 form-control-static" %>
        </div>

        <div class="form-group col-xs-9">
        <%= f.label :"メールアドレス", class: "col-sm-4 control-label" %>
        <%= f.text_field :email, class: "col-sm-7 form-control-static" %>
        </div>

      <div class="form-group col-xs-9">
        <%= f.label :"会員ステータス", class: "col-sm-4 control-label" %>
        　<%= f.radio_button :is_deleted, false %>
        　<%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
        　<%= f.radio_button :is_deleted, true %>
        　<%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
      </div>
    </div>
      <div class="actions  col-xs-9 col-xs-offset-4">
        <%= f.submit '変更を保存' ,class: "btn btn-outline-primary" %>
      </div>
  <% end %>
    </div>
  </div>
 </div>