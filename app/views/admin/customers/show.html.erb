<% provide(:title, "会員一覧") %>
  <h2 class="head-line title_h2 text-center">
    <%#= full_name(customer) %>さんの会員詳細
  </h2>
  <div class="container">
  <div class="row">
    <div class="col-xs-8">

      <div class="field">
        <p>
          顧客ID　　　　　<%= @customer.id %>
        </p>
      </div>
      <div class="field">
        <p>
          氏名　　　　　　<%= @customer.full_name %>
        </p>
      </div>
      <div class="field">
        <p>
          フリガナ　　　　<%= @customer.kana_full_name %>
        </p>
      </div>
      <div class="field">
        <p>
          郵便番号　　　　<%= @customer.postal_code %>
        </p>
      </div>
      <div class="field">
        <p>
          住所　　　　　　<%= @customer.address %>
        </p>
      </div>
      <div class="field">
        <p>
          電話番号　　　　<%= @customer.phone_number %>
        </p>
      </div>
      <div class="field">
        <p>
          メールアドレス　<%= @customer.email%>
        </p>
      </div>
      <div class="field">
        <p>
          会員ステータス  <% if @customer.is_deleted == true %>
                          <div class="text-secondary">退会</div>
                          <% else %>
                          <div class="text-success">有効</div>
                          <% end %>
        </p>
      </div>


      <div class="actions">
        <%#= link_to "編集する",edit_admin_customers_path(@customer), class: "glyphicon glyphicon-pencil btn btn-success edit_shipping_addres_#{@customer.id}" %>
        <%#= link_to " 注文履歴一覧を見る", current_index_admin_order_path(@customer), class: "glyphicon glyphicon-folder-open btn btn-info" %>
      </div>
    </div>
  </div>