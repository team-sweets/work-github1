<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <div style="background-color: silver; display: inline;"　>管理者ログイン</div>

<%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
  <div class="form-group">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
  </div>

  <div class="form-group">
    <%= f.label :"パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>



  <div class="form-group">
    <%= f.submit "ログイン", class: 'btn btn-primary' %>
  </div>
<% end %>

