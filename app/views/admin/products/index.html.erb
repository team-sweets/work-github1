<div class='container'>

  <p></p>

　<% if flash[:success] %>
	<div class="flash">
  <%= flash[:success] %>
  </div>
	 <% end %>
  <div class="row">
    <h3 style="display: inline;"><strong>商品一覧</strong></h3>
  </div>
  <p></p>
  <div class='row'>
      <div class="right">
        <%=link_to admin_products_new_path, class: "btn btn-outline-secondary new_product" do %>
        <i class="fas fa-plus"></i>
        <% end %>
      </div>
  </div>

  <p></p>

  <div class="row">
    <table class="table striped">
      <thead>
        <tr>
          <th bgcolor="#EEEEEE">商品ID</th>
          <th bgcolor="#EEEEEE">商品名</th>
          <th bgcolor="#EEEEEE">税抜価格</th>
          <th bgcolor="#EEEEEE">ジャンル</th>
          <th bgcolor="#EEEEEE">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td class="text-left" ><%= product.id %></td>
            <td class="text-left"><%= link_to product.name, admin_product_path(product) , class: "product_#{product.id}, link" %></td>
            <td class = "text-left"><%= product.tax_out_price %></td>
            <td class = "text-left"><%= product.genre.name%></td>
            <td class = "text-left">
            <% if product.sales_status == true %>
               <strong class="text-success">販売中</strong>
            <% else product.sales_status == false %>
               <strong class="text-danger">販売停止中</strong>
            <% end %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>

    <%= paginate @products %>

</div>


