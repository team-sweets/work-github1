<div class='container'>
  <div class='row'>
　<h2>商品一覧</h2>
    <table class='table'>
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= link_to @product.name, products_path(product) , class: "product_#{product.id}" %></td>
            <td><%= product.tax_out_price %></td>
            <td><%= product.genre_id %></td>
            <td><%= product.sales_status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 

