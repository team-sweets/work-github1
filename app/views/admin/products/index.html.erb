<div class='container'>
  <h2>商品一覧</h2>
  <div class='row'>
        <%=link_to admin_products_new_path, class: "btn btn-outline-secondary new-product" do %>
        <i class="fas fa-plus"></i>
        <% end %>
    <table class="table striped">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td class="text-left" ><%= product.id %></td>
            <td class="text-left"><%= link_to product.name, admin_product_path(product) , class: "product_#{product.id}" %></td>
            <td class="text-left"><%= product.tax_out_price %></td>
            <td class="text-left"><%= product.genre.name%></td>
            <td class="text-left">
            <% if product.sales_status == true %>
               <p>販売中</p>
            <% else product.sales_status == false %>
               <p>販売停止中</p>
            <% end %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
    </div>
    <%= paginate @products %>
  </div>


