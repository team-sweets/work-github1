<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>商品新規登録</h1>

<%= form_with model: @product, url:'/admin/products', local:true do |f| %>

<div class="form-group">
  <label for="Image">商品画像</label>
<%= f.attachment_field :image %>

<div class="form-group">
  <label for="Name">商品名</label>
  <%= f.text_field :name, class: "form-control name"%>
  </div>

  <div class="form-group">
    <label for="Description ">商品説明</label>
     <%= f.text_area :description, class: "form-control description" %>
     </div>

  <div class="field">
   <%= form_with model: @product do |f| %>
   <%= f.label :"ジャンル" %>
   <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択してください --" %>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :"税抜価格" %>
    <%= f.text_field :tax_out_price, class: "form-control-static tax_out_price" %>
</div>
  <div class="field">
<%= f.label :"販売ステータス", class: "control-label" %>
<%= f.radio_button :sales_status, :on_sale %>
<%= f.label :sales_status_on_sale, '販売中' %>
<%= f.radio_button :sales_status, :sold_out %>
<%= f.label :sales_status_sold_out, '販売停止中' %>
<%#= f.select :is_sale, [['販売中', true], ['販売停止', false]], prompt: "-- 選択してください --", class: "col-sm-9 is_sale" %>
</div>

<%= f.submit '新規登録', class: "btn btn-success" %>
<% end %>