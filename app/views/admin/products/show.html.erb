<div class='container'>

  <% if flash[:success] %>
    <div class="flash">
      <%= flash[:success] %>
    </div>
	<% end %>

	<div class="row subtitle">
　  <h3 style="display: inline;"><strong>商品詳細</strong></h3>
　</div>

　 <div class='row'>
     <tr class="col-md-12">
         <div classs="col-md-3">
          <%= attachment_image_tag @product, :image, size: "300x300", fallback: "no_image.jpg", class: "rounded cake_image_admin" %>
          </div>
           <div class=“col-md-3”>
                  商品名<br>
                  商品説明<br>
                  ジャンル<br>
                  税込価格<br>
                  （税抜価格）<br>
                  販売ステータス<br>
           </div>
           <div class="col-md-5">
                  <%= @product.name %><br>
                  <%= @product.description %><br>
                  <%= @product.genre.name %><br>
                  <%= @product.add_tax_tax_out_price.to_s(:delimited) %><br>
                  (<%= @product.tax_out_price %>)円<br>
                  <% if @product.sales_status == true %>
                  <strong class="text-success">販売中</strong>
                  <% else @product.sales_status == false %>
                  <strong style="text-secondary">販売停止中</strong>
                  <% end %><br>
                  <p></p>
                  <%= link_to "編集する", admin_product_edit_path, class: "btn btn-success"%>
           </div>
     </tr>
  </div>
</div>
