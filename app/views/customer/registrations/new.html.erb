<div class="container">
  <div class="row">
    <h2>新規会員登録</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>

    <div class="row form-for-resistration">
      <div class="col-3">
        <%= f.label :名前 %>
      </div>

      <div class="col-3">
        <%= f.text_field :first_name, placeholder: "姓", autofocus: true, autocomplete: "姓" %>
      </div>

      <div class="col-3">
        <%= f.text_field :last_name, placeholder: "名", autofocus: true, autocomplete: "名" %>
      </div>
    </div>


    <div class="row form-for-resistration">
        <div class="col-3">
          <%= f.label :フリガナ %>
        </div>
  
        <div class="col-3">
          <%= f.text_field :kana_first_name, placeholder: "セイ", autofocus: true, autocomplete: "セイ" %>
        </div>
  
        <div class="col-3">
          <%= f.text_field :kana_last_name, placeholder: "メイ", autofocus: true, autocomplete: "メイ" %>
        </div>
    </div>


    <div class="row form-for-resistration">
        <div class="col-3">
          <%= f.label :email,"メールアドレス" %>
        </div>
  
        <div class="col-3">
          <%= f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email" %>
        </div>
    </div>


    <div class="row form-for-resistration">
        <div class="col-3">
          <%= f.label :postal_code,"郵便番号(ハイフンなし)" %><br />
        </div>
  
        <div class="col-3">
          <%= f.text_field :postal_code, placeholder: "郵便番号", autofocus: true, autocomplete: "郵便番号(ハイフンなし)" %>
        </div>
    </div>


    <div class="row form-for-resistration">
        <div class="col-3">
          <%= f.label :address,"住所" %>
        </div>
  
        <div class="col-3">
          <%= f.text_field :address, placeholder: "住所", autofocus: true, autocomplete: "住所" %>
        </div>
    </div>


    <div class="row form-for-resistration">
        <div class="col-3">
          <%= f.label :phone_number,"電話番号(ハイフンなし)" %>
        </div>
  
        <div class="col-3">
          <%= f.text_field :phone_number, placeholder: "電話番号", autofocus: true, autocomplete: "電話番号(ハイフンなし)" %>
        </div>
    </div>


    <%= f.hidden_field :is_deleted, :value => false %>


    <div class="row form-for-resistration">
        <div class="col-3">
          <%= f.label :password,"パスワード" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </div>
        <div class="col-3">
          <%= f.password_field :password, placeholder: "パスワード", autofocus: true, autocomplete: "new-password" %>
        </div>
    </div>


    <div class="row form-for-resistration">
        <div class="col-3">
          <%= f.label :password,"パスワード(確認用)" %>
        </div>
        <div class="col-3">
          <%= f.password_field :password_confirmation, placeholder: "パスワード(確認用)", autofocus: true, autocomplete: "new-password" %>
        </div>
    </div>

    <div class="row form-for-resistration">
        <div class="col-3"></div>
        <div class="col-3">
          <%= f.submit "新規登録", class:"btn btn-outline-success" %>
        </div>
      </div>


    <div class="row form-for-resistration subtitle">
        <h4>既に登録済みの方</h4>
    </div>
    <div class="row form-for-resistration">
        <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
    </div>

  <% end %>
</div>