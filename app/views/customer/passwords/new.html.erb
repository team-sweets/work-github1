<div class="container">
  <div class="row">
    <h2>パスワード再設定</h2>
  </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "customer/shared/error_messages", resource: resource %>

    <div class="row form-for-resistration">
      <div class="col-3">
        <%= f.label :email,"メールアドレス" %>
      </div>
      <div class="col-4">
        <%= f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email" %>
      </div>
    </div>

      <div class="row form-for-resistration">
        <div class="col-3"></div>
        <div class="col-4">
          <%= f.submit "パスワードを再設定する", class:"btn btn-outline-dark" %>
        </div>
    </div>

  <% end %>
</div>