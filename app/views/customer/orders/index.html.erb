 <div class='container'>

  <% if @order.present? %>
  <div class='row'>
    <h5 style="background-color:#DCDCDC; display: inline;">注文履歴一覧</h5>

    <table border="1"  width="100%" cellpadding="6" cellspacing="0">
        <tr>
            <th width="10%">注文日</th>
            <th width="50%">配送先</th>
            <th width="10%">注文商品</th>
            <th width="10%">支払金額</th>
            <th width="10%">ステータス</th>
            <th width="10%">注文詳細</th>
        </tr>

        <tr>
            <% total_price = 0 %>
            <% @order_details.each do |order_detail| %>
            <% total_price += order_detail.sum_of_purchased_price %>
            <% end %>

            <% @orders.each do |order| %>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= order.shipping_postal_code %> <%= order.shipping_address %><br>
            <%= order.address_name %></td>
            <td><%= order.name %></td>
            <td>
              <% order.total_price = total_price + order.postage %>
              <%= order.total_price %>円
            </td>
            <td><%= order.orders_status %></td>
            <td><%= link_to "表示する", orders_all_path(order), class: "btn btn-success"%></td>
            <% end %>
        </tr>
    </table>

  </div>

  <% else %>
    <p>注文履歴がありません。</p>
  <% end %>
</div>
