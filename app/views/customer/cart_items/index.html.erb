        <% @cary_items.each do |cart_item| %>
        <tr>
           <td><%= attachment_image_tag cart_item, :image,size: "50x30" %>  <%= product.name %></td>
           <td><%= product.tax_out_price.to_s(:delimited) %></td>
           <td><%= link_to "変更",  cart_items_path ,class: 'btn btn-success' %></td>
           <td></td>
           <td  align="center"><%= link_to "削除する", cart_items_path(product) ,method: :delete,data: {confirm:  'カートを空にして本当によろしいですか？'},class: 'btn btn-danger' %></td>
        </tr>
        <% end %>

    </table>

   <%= link_to "買い物を続ける", root_path ,class: 'btn btn-primary' %>
