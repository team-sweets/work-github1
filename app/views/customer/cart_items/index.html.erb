<div class="container">
  <div class="row">
    <div class="col-lg-12" >



<h4>ショッピングカート    <div align="right"> <%= link_to "カートを空にする", cart_items_path , method: :delete,data: {confirm:  'カートを空にして本当によろしいですか？'}, class: 'btn btn-danger' %></div></h4>

    <table border="1"  width="100%" cellpadding="6" cellspacing="0">
        <tr>
            <th width="40%">商品名</th>
            <th width="15%">単価（税込）</th>
            <th width="15%">数量</th>
            <th width="15%">小計</th>
            <th width="15%"></th>
        </tr>

         
        <tr>
           <% @cart_items.each do |cart_item| %>　
           <td><%= attachment_image_tag cart_item.product, :image,size: "50x30" %>  <%= cart_item.product.name %></td>
           <td><%= cart_item.product.add_tax_tax_out_price.to_s(:delimited) %></td>
           <td><%= form_with model: cart_item, url: cart_items_update_path(cart_item), local: true do |f| %>
            <%= f.number_field :quantity, class: "quantity", size: 10, min: 1, id: "quantity_cart" %><%= f.submit '変更',class: 'btn btn-success' %></td>
            <% end %>
           <td><%= (cart_item.product.add_tax_tax_out_price.to_i*cart_item.quantity).to_s(:delimited) %></td>
           <% @count += cart_item.product.add_tax_tax_out_price.to_i*cart_item.quantity  %>
           <td  align="center"><%= link_to "削除する",cart_items_destroy_path(cart_item.id), method: :delete,data: {confirm:  '削除して本当によろしいですか？'},class: 'btn btn-danger' %></td>
        </tr>
        <% end %>
    </table>

    <p></p>

   
    <div align="right">
    <table border="1"  width="30%" cellpadding="6" cellspacing="0">
         <tr>
            <th width="15%">合計金額</th>
            <th width="15%"><%= @count.to_s(:delimited) %></th>
        </tr>
    </table>
    </div>
   <%= link_to "買い物を続ける", root_path ,class: 'btn btn-primary' %>

   <div style="text-align:center"><%= link_to "情報入力に進む", orders_new_path ,class: 'btn btn-success' %></div>
  </div>
  </div>
 </div>
   
   