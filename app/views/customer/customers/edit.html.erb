<div class="container">
  <div class="row subtitle">
    <h2 class="col-12">会員情報編集</h2>
  </div>

      <% if @customer.errors.any? %>
      <div class="row error_messages">
        <strong><font color="red"><%= @customer.errors.count %>件のエラーが発生しました。<br></font></strong>
        <% @customer.errors.full_messages.each do |message| %>
          <font color="black">・<%= message %>。<br></font>
        <% end %>
      </div>
      <% end %>

      <%= form_with(model:@customer, url:customers_update_path, local: true ,method: :patch) do |f| %>

      <div class="row justify-content-center">
        <div class="form-group col-12">
            <%= f.label :"氏名", class: "col-3" %>
            <%= f.text_field :first_name, placeholder: "姓", autofocus: true, class: "first_name col-2" %>
            <%= f.text_field :last_name, placeholder: "名", autofocus: true, class: "last_name col-2" %>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="form-group col-12">
          <%= f.label :"フリガナ", class: "col-sm-3" %>
          <%= f.text_field :kana_first_name, placeholder: "セイ", autofocus: true, class: "kana_first_name col-sm-2" %>
          <%= f.text_field :kana_last_name, placeholder: "メイ", autofocus: true, class: "kana_last_name col-sm-2" %>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="form-group col-12">
            <%= f.label :"郵便番号", class: "col-3" %>
            <%= f.text_field :postal_code, placeholder: "郵便番号", autofocus: true, class: "col-2" %>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="form-group col-12">
            <%= f.label :"住所", class: "col-3" %>
            <%= f.text_field :address, placeholder: "住所", autofocus: true, class: "col-4" %>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="form-group col-12">
            <%= f.label :"電話番号(ハイフンなし)", class: "col-3" %>
            <%= f.text_field :phone_number, placeholder: "電話番号", autofocus: true, class: "col-2" %>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="form-group col-12">
            <%= f.label :"メールアドレス", class: "col-3" %>
            <%= f.text_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email", class: "col-2" %>
        </div>
      </div>


        <div class="row">
            <div class="col-3"></div>
            <%= f.submit "編集内容を保存する", class: "btn btn-outline-primary nav-link save col-2" %>
            <%= link_to "退会する", customers_quit_path, class: "btn btn-outline-danger nav-link col-2" %>
        </div>

      <% end %>

  </div>
</div>