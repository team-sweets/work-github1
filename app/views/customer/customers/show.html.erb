<% provide(:title, "マイページ") %>
<div class="container">
	<div class="row">
		<div class="col-xs-offset-1 col-">
			<div class="row subtitle">
				<h2>マイページ</h2>
			</div>
			<p><strong class="information-link">登録情報</strong>
				<%= link_to " 編集する", customers_edit_path, class: "btn btn-outline-success" %>
				<%= link_to " パスワードを変更する", edit_customer_registration_path, class: "btn btn-outline-danger" %>
			</p>

        <h5><font color="green"><%= flash[:notice_customer] %></font></h5>
				<table class="table table-bordered table-condensed" >
					<tbody>

						<tr>
							<td class="info">氏名</td>
							<td class="text-left"><%= @customer.full_name %></td>
						</tr>

						<tr>
							<td class="info">カナ</td>
							<td class="text-left"><%= @customer.kana_full_name %></td>
						</tr>

						<tr>
							<td class="info">郵便番号</td>
							<td class="text-left"><%= @customer.postal_code %></td>
						</tr>

						<tr>
							<td class="info">住所</td>
							<td class="text-left"><%= @customer.address %></td>
						</tr>

						<tr>
							<td class="info">電話番号</td>
							<td class="text-left"><%= @customer.phone_number %></td>
						</tr>

						<tr>
							<td class="info">メールアドレス</td>
							<td class="text-left"><%= @customer.email %></td>
						</tr>

					</tbody>
				</table>

				<table class='table table-hover table-inverse'>
				 <thead>
				     <tr style="border:none;">
				        <th style="border:none;"><h6><strong class="shipping-link">配送先</strong></h6></th>
				        <th style="border:none;"><%= link_to " 一覧を見る", shipping_addresses_path, data: {"turbolinks" => false}, class: "glyphicon glyphicon-folder-open btn btn-outline-info" %></th>
				     </tr>
				     <tr style="border:none;">
				        <th style="border:none;"><h6><strong class="order-link">注文履歴</strong></h6></th>
				        <th style="border:none;"><%= link_to " 一覧を見る", orders_all_path, class: "glyphicon glyphicon-folder-open btn btn-outline-info" %></th>
				     </tr>
				 </thead>
				 </table>

		</div>
	</div>
</div>