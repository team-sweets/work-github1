<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <h2>配送先編集</h2>
      <%= form_with(model: @shipping_address, url: update_address_path, local: true ) do |f| %>

        <%= render "customer/shared/error_messages", resource: @shipping_address %>

          <div class="col-xs-10">
              <div>
                <%= f.label :"郵便番号", class: "col-sm-3 control-label" %>
                <%= f.text_field :postal_code, class: "col-sm-3form-control-static" %>
              </div>

              <div>
                <%= f.label :"住所", class: "col-sm-3 control-label" %>
                <%= f.text_field :address, class: "col-sm-3 form-control-static" %>
              </div>

              <div>
                <%= f.label :"宛名", class: "col-sm-3 control-label" %>
                <%= f.text_field :name, class: "col-sm-6 form-control-static" %>
              </div>
          </div>

          <div class="actions col-xs-9 col-xs-offset-3">
            <%= f.submit "変更内容を保存する", class: "btn btn-primary save col-xs-6" %>
          </div>

      <% end %>

    </div>
  </div>
</div>