
<div class = "customer-product-index">

    <div class="col-md-10 mx-auto">


<h5><font color="green"><%= flash[:notice_log_in] %></font></h5>
<h4><strong>商品一覧</strong><span>（全<%= @products.total_count %>件中<%= @products.count %>件）</span></h4>

<div class="row item-group">
<% @products.each do |product| %>
<div class="col-md-3">

  <%= link_to products_show_path(product.id), class:"link" do %>
    <%= attachment_image_tag product, :image ,size: "210x140", fallback: "no_image.jpg", class: "rounded" %>
    <p><strong>商品名</strong> <%= product.name %></p>
  <% end %>

  <p>¥<%= product.tax_out_price.to_s(:delimited) %></p>
  </div>
<% end %>
</div>

<div style="text-align: center;">
  <%= paginate @products %>
</div>

  </div>
  </div>