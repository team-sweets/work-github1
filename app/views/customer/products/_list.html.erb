
<div class = "customer-product-index">

    <div class="col-md-10 mx-auto">

<div class="row item-group">
<% products.each do |product| %>
<div class="col-md-3">

  <%= link_to products_show_path(product.id), class:"link" do %>
    <%= attachment_image_tag product, :image ,size: "210x140", fallback: "no_image.jpg", class: "rounded" %>
    <p><strong>商品名</strong> <%= product.name %></p>
  <% end %>

  <div class="shortcut">商品名 : <%= product.name %></div>


  <p>
  <% if product.sales_status == true %>
       <p><font color = "green">販売中</font> ¥<%= product.tax_out_price.to_s(:delimited) %></p>
  <% else product.sales_status == false %>
       <p><font color = "red">販売停止中</font> ¥<%= product.tax_out_price.to_s(:delimited) %></p>
  <% end %>
  </p>

  </div>
<% end %>
</div>

  </div>
  </div>